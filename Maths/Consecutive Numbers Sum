class Solution {
    public int consecutiveNumbersSum(int n) {
        int k = 1;
        int ans = 0;

        while (k <= n) {
            int num = n - (k * (k - 1) / 2);

            if (num > 0 && num % k == 0) {
                ans++;
            }
            if (num <= 0) {
                break;
            }
            k++;
        }
        return ans;
    }
}
