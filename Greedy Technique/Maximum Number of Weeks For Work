class Solution {
    public long numberOfWeeks(int[] milestones) {
        long total = 0;
        int max = 0;

        for (int num : milestones) {
            total += num;
            max = Math.max(max, num);
        }

        if (max <= total - max) {
            return total;
        } else {
            return 2 * (total - max) + 1;
        }
    }
}
