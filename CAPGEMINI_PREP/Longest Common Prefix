class Solution {
    public String longestCommonPrefix(String[] strs) {
        if (strs == null || strs.length == 0) return "";

        // Take first string as reference
        String first = strs[0];

        // Loop through characters of the first string
        for (int i = 0; i < first.length(); i++) {
            char c = first.charAt(i);

            // Compare this character with the same position in other strings
            for (int j = 1; j < strs.length; j++) {
                // If index is out of range OR char doesn’t match → return prefix so far
                if (i >= strs[j].length() || strs[j].charAt(i) != c) {
                    return first.substring(0, i);
                }
            }
        }
        return first; // If we never break, the whole first string is the prefix
    }
}
