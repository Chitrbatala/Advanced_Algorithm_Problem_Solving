class Solution {
    public boolean isIsomorphic(String s, String t) {
        if (s.length() != t.length()) return false;

        Map<Character, Character> mapST = new HashMap<>();
        Map<Character, Character> mapTS = new HashMap<>();

        for (int i = 0; i < s.length(); i++) {
            char chS = s.charAt(i);
            char chT = t.charAt(i);

            // If already mapped, check consistency
            if (mapST.containsKey(chS) && mapST.get(chS) != chT) return false;
            if (mapTS.containsKey(chT) && mapTS.get(chT) != chS) return false;

            // Create new mapping
            mapST.put(chS, chT);
            mapTS.put(chT, chS);
        }

        return true;
    }
}
