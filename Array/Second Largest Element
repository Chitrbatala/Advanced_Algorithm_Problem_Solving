class Solution {
    public int getSecondLargest(int[] arr) {
        int n = arr.length;
        if (n < 2) return -1;
        
        int largest = Integer.MIN_VALUE;
        int secondL = Integer.MIN_VALUE;
        
        for (int num : arr) {
            if (num > largest) {
                secondL = largest;
                largest = num;
            } else if (largest > num && secondL < num) {
                secondL = num;
            }
        }
        
        if (secondL == Integer.MIN_VALUE) {
            return -1;
        }
        return secondL;
        
    }
}
